@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container">
    <h1 class="text-center">Kayıt Ol</h1>

    <form action="/Account/SignUp" method="post" class="col-md-6 offset-md-3">
        <div class="form-group">
            <label for="username">Kullanıcı Adı:</label>
            <input type="text" id="username" name="username" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="password">Şifre:</label>
            <input type="password" id="password" name="password" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Kaydol</button>
    </form>

    <div class="text-center mt-4">
        <a href="~/Home/Index" class="btn btn-secondary">Geri Dön</a>
    </div>
</div>
