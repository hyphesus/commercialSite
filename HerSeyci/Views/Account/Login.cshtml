
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-5">Giriş Yapınız</h5>
                    <form action="Kullanici" method="post">
                        <div class="form-floating mb-3">
                            <input type="text" name="user_name" class="form-control" id="floatingInput">
                            <label for="floatingInput">Kullanıcı Adınız</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" name="password" class="form-control" id="floatingPassword">
                            <label for="floatingPassword">Şifre</label>
                        </div>


                        <div class="d-grid">
                            <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">
                                Giriş
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
