
@{
    ViewBag.Title = "Urun_Ekle";
    Layout = "~/Views/_LayoutPage2.cshtml";
}
<form action="Urun_Ekle" method="post">
    <div style="width:300px; ">
        <h5 class="card-title text-center mb-5 fw-light fs-5">Ürün Ekle</h5>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Ürün Ad</label>
                <input name="name" class="form-control" placeholder="Ürün Ad">
            </div>
            <div class="form-group col-md-6">
                <label>Fiyat</label>
                <input type="text" name="price" class="form-control" placeholder="Fiyat">
            </div>
        </div>
        <div class="form-group">
            <label>Detay</label>
            <input type="text" name="description" class="form-control" placeholder="Detay">
        </div>
        <div class="form-group">
            <label>Ürün Resim Link</label>
            <input type="text" name="img_url" class="form-control" placeholder="Ürün Resim Link">
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Kategori</label>
                <select name="category" class="form-control">
                    <option selected>1.Giyim</option>
                    <option>2.Elektronik</option>
                    <option>3.Kozmetik</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label>Stok Var?</label>
                <select name="stock" class="form-control">
                    <option selected>True</option>
                    <option>False</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Ekle</button>
    </div>
</form>
