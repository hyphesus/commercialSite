
@{
    ViewBag.Title = "Kupon";
    Layout = "~/Views/_LayoutPage2.cshtml";
}

<form action="Kupon_Ekle" method="post">
    <div style="width:500px; ">
        <h5 class="card-title mb-5 fw-light fs-5">Kupon Oluştur</h5>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>1-Herkes n-Özel</label>
                <input name="user_id" class="form-control" placeholder="Kullanıcı Id">
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Kupon Kodu</label>
                <input name="coupon_name" class="form-control" placeholder="Kod">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Kupon Değeri</label>
                <input name="coupon_value" class="form-control" placeholder="$">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Kupon Son Kullanma Tarihi</label>
                <input type="date" data-date="" data-date-format="YYYY MMMM DD" name="coupon_date" class="form-control" placeholder="Tarih">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Ekle</button>
    </div>
</form>

